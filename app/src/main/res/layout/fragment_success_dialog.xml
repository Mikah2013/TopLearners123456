<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Dialog"
    tools:context=".dialogFragments.SuccessDialogFragment">

    <ImageButton
        android:id="@+id/okayImageBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ok_tick"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/okay_image_button"/>

    <TextView
        android:id="@+id/confirmTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/submission_successful"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/okayImageBtn"
        android:textSize="22sp" />


</RelativeLayout>
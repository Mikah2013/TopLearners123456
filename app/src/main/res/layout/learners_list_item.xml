<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_learner"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:contentDescription="@string/leader_image" />

        <TextView
            android:id="@+id/learnerNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/image_learner"
            android:layout_toEndOf="@id/image_learner"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/learnerHoursSkillsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/learnerNameTxt"
            android:layout_toRightOf="@id/image_learner"
            android:layout_toEndOf="@id/image_learner"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/learnerCountryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/learnerNameTxt"
            android:layout_toRightOf="@id/learnerHoursSkillsTxt"
            android:layout_toEndOf="@id/learnerHoursSkillsTxt"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>